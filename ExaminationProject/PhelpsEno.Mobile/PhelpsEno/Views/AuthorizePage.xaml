<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhelpsEno.Views.AuthorizePage">
    <StackLayout BackgroundColor="White">
        
        <StackLayout Padding="60">
            <Image Source="icon_authorize.png"></Image>
        </StackLayout>
        
        <StackLayout Padding="20">
            <Label HorizontalOptions="Center" FontSize="14" FontFamily="Roboto" TextColor="Black" LineHeight="20">
                Войдите или создайте аккаунт
            </Label>
            
            <Entry FontSize="14" Placeholder = "Почта или логин" Margin="15">
            </Entry>
            
            <Button Clicked="SignIn_OnClicked" x:Name="SignIn" Text="Продолжить"  BackgroundColor="#FFDB5C" TextColor="Black" Margin="15">
            </Button>
        </StackLayout>
        
    </StackLayout>
    
</ContentPage>